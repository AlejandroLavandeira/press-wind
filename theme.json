{
    "$schema": "https://schemas.wp.org/wp/6.3/theme.json",
    "version": 2,
    "settings": {
        "appearanceTools": true,
        "color": {
            "palette": [
                {
                    "name": "Blanco",
                    "slug": "white",
                    "color": "#ffffff"
                },
                {
                    "name": "Fondo Claro",
                    "slug": "background-light",
                    "color": "#f9f9f9"
                },
                {
                    "name": "Fondo Sutil",
                    "slug": "background-subtle",
                    "color": "#FBFBFB"
                },
                {
                    "name": "Texto Oscuro",
                    "slug": "foreground",
                    "color": "#333333"
                },
                {
                    "name": "Negro Puro",
                    "slug": "black",
                    "color": "#0a0a0a"
                },
                {
                    "name": "Tostado (Base)",
                    "slug": "base",
                    "color": "#8c7954"
                },
                {
                    "name": "Tostado (Contraste)",
                    "slug": "contrast",
                    "color": "#ad7e4b"
                },
                {
                    "name": "Terracota",
                    "slug": "tertiary",
                    "color": "#8c543f"
                },
                {
                    "name": "Acento Dorado",
                    "slug": "accent",
                    "color": "#bf820f"
                },
                {
                    "name": "Acento Dorado Brillante",
                    "slug": "accent-bright",
                    "color": "#d9a60d"
                }
            ]
        },
        "custom": {
            "spacing": {
                "small": "max(1.25rem, 5vw)",
                "medium": "clamp(2rem, 8vw, calc(4 * var(--wp--style--block-gap)))",
                "large": "clamp(4rem, 10vw, 8rem)",
                "outer": "var(--wp--custom--spacing--small, 1.25rem)"
            },
            "typography": {
                "font-size": {
                    "huge": "clamp(2.25rem, 4vw, 2.75rem)",
                    "gigantic": "clamp(2.75rem, 6vw, 3.25rem)",
                    "colossal": "clamp(3.25rem, 8vw, 6.25rem)"
                },
                "line-height": {
                    "tiny": 1.15,
                    "small": 1.2,
                    "medium": 1.4,
                    "normal": 1.6
                }
            }
        },
        "spacing": {
            "units": [
                "%",
                "px",
                "em",
                "rem",
                "vh",
                "vw"
            ]
        },
        "typography": {
            "dropCap": false,
            "fontFamilies": [
                {
                    "fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif",
                    "name": "System Font",
                    "slug": "system-font"
                },
                {
                    "fontFamily": "\"PlayfairDisplay\", serif",
                    "name": "PlayfairDisplay",
                    "slug": "PlayfairDisplay",
                    "fontFace": [
                        {
                            "fontFamily": "PlayfairDisplay",
                            "fontWeight": "600",
                            "fontStyle": "normal",
                            "fontStretch": "normal",
                            "src": [
                                "file:./assets/fonts/PlayfairDisplay-Bold.woff2"
                            ]
                        }
                    ]
                },
                {
                    "fontFamily": "\"Roboto\", sans-serif",
                    "name": "Roboto",
                    "slug": "Roboto",
                    "fontFace": [
                        {
                            "fontFamily": "Roboto",
                            "fontWeight": "300",
                            "fontStyle": "normal",
                            "fontStretch": "normal",
                            "src": [
                                "file:./assets/fonts/roboto-v27-latin-300.woff2"
                            ]
                        },
                        {
                            "fontFamily": "Roboto",
                            "fontWeight": "400",
                            "fontStyle": "normal",
                            "fontStretch": "normal",
                            "src": [
                                "file:./assets/fonts/roboto-v27-latin-regular.woff2"
                            ]
                        },
                        {
                            "fontFamily": "Roboto",
                            "fontWeight": "300",
                            "fontStyle": "italic",
                            "fontStretch": "normal",
                            "src": [
                                "file:./assets/fonts/roboto-v27-latin-italic.woff2"
                            ]
                        },
                        {
                            "fontFamily": "Roboto",
                            "fontWeight": "700",
                            "fontStyle": "normal",
                            "fontStretch": "normal",
                            "src": [
                                "file:./assets/fonts/roboto-v27-latin-700.woff2"
                            ]
                        }
                    ]
                }
            ],
            "fontSizes": [
                {
                    "size": "1rem",
                    "slug": "small"
                },
                {
                    "size": "1.125rem",
                    "slug": "medium"
                },
                {
                    "size": "1.75rem",
                    "slug": "large"
                },
                {
                    "size": "clamp(1.75rem, 3vw, 2.25rem)",
                    "slug": "x-large"
                }
            ]
        },
        "layout": {
            "contentSize": "1024px",
            "wideSize": "1275px"
        }
    },
"styles": {
        "blocks": {
            "core/button": {
                "border": {
                    "radius": "5px"
                },
                "color": {
                    "background": "var(--wp--preset--color--accent-bright)",
                    "text": "var(--wp--preset--color--black)"
                },
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--medium)",
                    "fontWeight": "700"
                },
                ":hover": {
                    "color": {
                        "background": "var(--wp--preset--color--accent)",
                        "text": "var(--wp--preset--color--white)"
                    }
                }
            }
        },
        "color": {
            "background": "var(--wp--preset--color--white)",
            "text": "var(--wp--preset--color--foreground)"
        },
        "elements": {
            "h1": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--playfair-display)",
                    "fontWeight": "600",
                    "lineHeight": "var(--wp--custom--typography--line-height--tiny)",
                    "fontSize": "var(--wp--custom--typography--font-size--colossal)",
                    "color": "var(--wp--preset--color--base)"
                }
            },
            "h2": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--playfair-display)",
                    "fontWeight": "600",
                    "lineHeight": "var(--wp--custom--typography--line-height--small)",
                    "fontSize": "var(--wp--custom--typography--font-size--gigantic)",
                    "color": "var(--wp--preset--color--base)"
                }
            },
            "h3": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--playfair-display)",
                    "fontWeight": "600",
                    "lineHeight": "var(--wp--custom--typography--line-height--tiny)",
                    "fontSize": "var(--wp--custom--typography--font-size--huge)",
                    "color": "var(--wp--preset--color--base)"
                }
            },
            "h4": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--playfair-display)",
                    "fontWeight": "600",
                    "lineHeight": "var(--wp--custom--typography--line-height--tiny)",
                    "fontSize": "var(--wp--preset--font-size--x-large)",
                    "color": "var(--wp--preset--color--base)"
                }
            },
            "h5": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--system-font)",
                    "fontWeight": "700",
                    "textTransform": "uppercase",
                    "lineHeight": "var(--wp--custom--typography--line-height--normal)",
                    "fontSize": "var(--wp--preset--font-size--medium)"
                }
            },
            "h6": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--system-font)",
                    "fontWeight": "400",
                    "textTransform": "uppercase",
                    "lineHeight": "var(--wp--custom--typography--line-height--normal)",
                    "fontSize": "var(--wp--preset--font-size--medium)"
                }
            },
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--accent)"
                },
                ":hover": {
                    "color": {
                        "text": "var(--wp--preset--color--contrast)"
                    }
                }
            }
        },
        "spacing": {
            "blockGap": "1.5rem"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--system-font)",
            "lineHeight": "var(--wp--custom--typography--line-height--normal)",
            "fontSize": "var(--wp--preset--font-size--medium)"
        }
    }
}
